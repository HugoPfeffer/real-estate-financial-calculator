{
  "name": "Claude Code Sandbox",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "TZ": "${localEnv:TZ:America/Sao_Paulo}",
      "CLAUDE_CODE_VERSION": "latest",
      "GIT_DELTA_VERSION": "0.18.2",
      "STARSHIP_VERSION": "1.21.1"
    }
  },
  "runArgs": ["--cap-add=NET_ADMIN", "--cap-add=NET_RAW"],
  "customizations": {
    "vscode": {
      "extensions": [
        "anthropic.claude-code",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-azuretools.vscode-docker",
        "anysphere.remote-containers",
        "anysphere.remote-ssh",
        "anysphere.cursorpyright",
        "anysphere.cursor-lsp-profiler",
        "redhat.vscode-yaml",
        "redhat.vscode-xml",
        "redhat.vscode-openshift-connector",
        "redhat.vscode-apache-camel",
        "redhat.vscode-debug-adapter-apache-camel",
        "redhat.vscode-camelk",
        "redhat.vscode-server-connector",
        "jeff-hykin.xd-theme",
        "DavidAnson.vscode-markdownlint",
        "vscjava.vscode-java-pack",
        "ritwickdey.LiveServer",
        "GitHub.vscode-github-actions"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "bash",
            "icon": "terminal-bash"
          }
        },
        "scm.alwaysShowActions": false,
        "scm.alwaysShowRepositories": true,
        "workbench.colorCustomizations": {},
        "window.commandCenter": 1,
        "workbench.editorAssociations": {
          "*.rule": "customFileEditor",
          "*.mdc": "customFileEditor"
        },
        "cursor.composer.shouldChimeAfterChatFinishes": true,
        "cursor.composer.shouldAllowCustomModes": true,
        "C_Cpp_Runner.cCompilerPath": "/usr/bin/x86_64-w64-mingw32-g++",
        "editor.minimap.enabled": true,
        "workbench.activityBar.orientation": "vertical",
        "cursorStats.showProgressBars": true,
        "cursorStats.currency": "USD",
        "remote.SSH.remotePlatform": {},
        "workbench.colorTheme": "XD Theme",
        "hexeditor.columnWidth": 16,
        "hexeditor.showDecodedText": true,
        "hexeditor.defaultEndianness": "little",
        "hexeditor.inspectorType": "aside",
        "geminicodeassist.project": "advance-dreamlet-170k4",
        "claude-code.extraArgs": ["--dangerously-skip-permissions"],
        "claudeCode.selectedModel": "default",
        "claudeCode.environmentVariables": []
      }
    }
  },
  "remoteUser": "node",
  "mounts": [
    "source=claude-code-bashhistory-${devcontainerId},target=/commandhistory,type=volume",
    "source=claude-code-config-${devcontainerId},target=/home/node/.claude,type=volume"
  ],
  "containerEnv": {
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "CLAUDE_CONFIG_DIR": "/home/node/.claude",
    "GITHUB_TOKEN": "${localEnv:GITHUB_TOKEN}",
    "CONTEXT7_API_KEY": "${localEnv:CONTEXT7_API_KEY}",
    "FIRECRAWL_LOCAL_API_URL": "${localEnv:FIRECRAWL_LOCAL_API_URL}",
    "GIT_AUTHOR_NAME": "${localEnv:GIT_AUTHOR_NAME}",
    "GIT_AUTHOR_EMAIL": "${localEnv:GIT_AUTHOR_EMAIL}",
    "GIT_COMMITTER_NAME": "${localEnv:GIT_COMMITTER_NAME}",
    "GIT_COMMITTER_EMAIL": "${localEnv:GIT_COMMITTER_EMAIL}",
    "EDITOR": "${localEnv:EDITOR}"
  },
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=delegated",
  "workspaceFolder": "/workspace",
  // "postStartCommand": "sudo /usr/local/bin/init-firewall.sh",
  "waitFor": "postStartCommand"
}
